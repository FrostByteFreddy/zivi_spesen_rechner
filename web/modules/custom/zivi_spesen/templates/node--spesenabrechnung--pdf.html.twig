{#
/**
 * @file
 * Modern PDF template for Spesenabrechnung.
 */
#}
<div class="pdf-container" style="font-family: 'Inter', 'Helvetica Neue', Helvetica, Arial, sans-serif; color: #1f2937; line-height: 1.3; padding: 25px; max-width: 800px; margin: 0 auto;">
  
  {# Header with Logo/Title & Stamp #}
  <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border-bottom: 2px solid #f3f4f6; table-layout: fixed;">
    <tr>
      <td style="vertical-align: top; padding-bottom: 10px; width: 65%;">
        <h1 style="margin: 0; font-size: 20px; font-weight: 800; color: #111827; letter-spacing: -0.025em;">Spesenabrechnung</h1>
        <p style="margin: 2px 0 0; font-size: 10px; color: #6b7280; font-weight: 500;">Zivildienst Spesenmanagement System</p>
        
        <div style="margin-top: 10px; font-size: 10px; font-weight: 600; color: #374151;">Datum: {{ "now"|date("d.m.Y") }}</div>
        <div style="font-size: 9px; color: #9ca3af;">ID: #{{ node.id() }}</div>
      </td>
      <td style="vertical-align: top; text-align: right; padding-bottom: 10px; width: 35%;">
        {# Accounting Stamp #}
        <table style="width: 220px; border-collapse: collapse; font-size: 9px; color: #4b5563; margin-left: auto; text-align: left; border: 1px solid #9ca3af; table-layout: fixed;">
          <tr>
            <td style="width: 25%; padding: 4px 6px; border: 1px solid #9ca3af; background-color: #f9fafb;">Beschrieb</td>
            <td colspan="3" style="width: 75%; padding: 4px 6px; border: 1px solid #9ca3af;"></td>
          </tr>
          <tr>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">KST</td>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">Konto</td>
          </tr>
          <tr>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">Visum:</td>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">Vis.GL</td>
          </tr>
          <tr>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">Geb.</td>
            <td colspan="2" style="width: 50%; padding: 4px 6px; border: 1px solid #9ca3af;">Bez.</td>
          </tr>
        </table>
      </td>
    </tr>
  </table>

  {# User & Period Info Grid #}
  <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
    <div>
      <h3 style="font-size: 9px; font-weight: 700; text-transform: uppercase; color: #9ca3af; margin-bottom: 4px; letter-spacing: 0.05em;">Zivildienstleistender</h3>
      <div style="font-size: 13px; font-weight: 600; color: #111827;">{{ node.getOwner().field_full_name.value|default(node.getOwner().getDisplayName()) }}</div>
      <div style="font-size: 11px; color: #4b5563; margin-top: 2px; white-space: pre-line;">{{ node.getOwner().field_address.value|default('Keine Adresse hinterlegt') }}</div>
      <div style="font-size: 11px; color: #4b5563; margin-top: 4px;"><strong>IBAN:</strong> {{ node.getOwner().field_iban.value|default('Keine IBAN hinterlegt') }}</div>
    </div>
    <div style="text-align: right;">
      <h3 style="font-size: 9px; font-weight: 700; text-transform: uppercase; color: #9ca3af; margin-bottom: 4px; letter-spacing: 0.05em;">Abrechnungszeitraum</h3>
      <div style="font-size: 13px; font-weight: 600; color: #111827;">{{ node.field_date_range.value|date('d. M Y') }} - {{ node.field_date_range.end_value|date('d. M Y') }}</div>
      {% set start_date = node.field_date_range.value|date('U') %}
      {% set end_date = node.field_date_range.end_value|date('U') %}
      {% set total_days = ((end_date - start_date) / 86400)|round(0, 'ceil') + 1 %}
      <div style="font-size: 11px; color: #4b5563; margin-top: 2px;">Anrechenbare Tage: <strong>{{ total_days }}</strong></div>
    </div>
  </div>

  {# Expenses Table #}
  <div class="expenses-section" style="margin-bottom: 20px;">
    <table style="width: 100%; border-collapse: separate; border-spacing: 0; font-size: 12px;">
      <thead>
        <tr>
          <th style="padding: 8px 12px; text-align: left; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb; color: #374151; font-weight: 600; border-top-left-radius: 8px;">Bezeichnung</th>
          <th style="padding: 8px 12px; text-align: right; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb; color: #374151; font-weight: 600; width: 70px;">Satz</th>
          <th style="padding: 8px 12px; text-align: right; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb; color: #374151; font-weight: 600; width: 50px;">Tage</th>
          <th style="padding: 8px 12px; text-align: right; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb; color: #374151; font-weight: 600; width: 90px; border-top-right-radius: 8px;">Betrag</th>
        </tr>
      </thead>
      <tbody>
        {% for item in node.field_expense_items %}
          {% set paragraph = item.entity %}
          <tr style="border-bottom: 1px solid #f3f4f6;">
            <td style="padding: 8px 12px; border-bottom: 1px solid #f3f4f6;">
              <div style="font-weight: 600; color: #111827;">{{ paragraph.field_item_type.value }}</div>
              {% if paragraph.field_comment.value %}
                <div style="font-size: 10px; color: #6b7280; margin-top: 1px;">{{ paragraph.field_comment.value }}</div>
              {% endif %}
            </td>
            <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #f3f4f6; color: #4b5563;">{{ paragraph.field_rate.value|number_format(2, '.', "'") }}</td>
            <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #f3f4f6; color: #4b5563;">{{ paragraph.field_quantity.value|number_format(0) }}</td>
            <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #f3f4f6; font-weight: 600; color: #111827;">CHF {{ paragraph.field_total_amount.value|number_format(2, '.', "'") }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  {# Totals Section #}
  <div style="display: flex; justify-content: flex-end; margin-top: 10px;">
    <div style="width: 220px;">
      <div style="display: flex; justify-content: space-between; padding: 10px 14px; background-color: #111827; border-radius: 8px; color: #ffffff;">
        <span style="font-weight: 600; font-size: 13px;">Gesamtbetrag</span>
        <span style="font-weight: 800; font-size: 15px;">CHF {{ node.field_total_sum.value|number_format(2, '.', "'") }}</span>
      </div>
    </div>
  </div>

  {# Footer Note #}
  <div style="margin-top: 30px; padding-top: 15px; border-top: 1px solid #e5e7eb; font-size: 9px; color: #9ca3af; text-align: center;">
    Diese Abrechnung wurde elektronisch erstellt und ist ohne Unterschrift g√ºltig. 
    Gem√§√ü Verordnung des EVD √ºber Geldleistungen zugunsten zivildienstleistender Personen.
  </div>

  {# Receipts #}
  {% set receipts = [] %}
  {% set standard_types = ['Taschengeld', 'Morgenessen', 'Mittagessen', 'Nachtessen', 'OV / Sonstiges'] %}
  
  {% for item in node.field_expense_items %}
    {% set paragraph = item.entity %}
    {% if paragraph.field_receipt.entity and paragraph.field_item_type.value not in standard_types %}
      {% set receipts = receipts|merge([paragraph]) %}
    {% endif %}
  {% endfor %}

  {% if receipts|length > 0 %}
    <div class="receipts-section" style="page-break-before: always; padding-top: 40px;">
      <div style="margin-bottom: 30px; border-bottom: 2px solid #111827; padding-bottom: 10px;">
        <h2 style="margin: 0; font-size: 20px; font-weight: 800; color: #111827;">Beleg√ºbersicht</h2>
        <p style="margin: 4px 0 0; font-size: 12px; color: #6b7280;">Nachweise f√ºr zus√§tzliche Spesenaufw√§nde</p>
      </div>
      
      {% for item in receipts %}
        <div class="receipt-item" style="margin-bottom: 40px; page-break-inside: avoid; background-color: #f9fafb; border-radius: 12px; padding: 20px; border: 1px solid #e5e7eb;">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
            <h3 style="margin: 0; font-size: 14px; font-weight: 700; color: #111827;">{{ item.field_item_type.value }}</h3>
            <div style="font-size: 14px; font-weight: 800; color: #111827;">CHF {{ item.field_total_amount.value|number_format(2, '.', "'") }}</div>
          </div>
          
          {% if item.field_receipt.entity.filemime.value starts with 'image/' %}
            <div style="text-align: center; background-color: #ffffff; padding: 10px; border-radius: 8px; border: 1px solid #f3f4f6;">
              <img src="{{ file_url(item.field_receipt.entity.uri.value) }}" style="max-width: 100%; max-height: 500px; object-fit: contain;">
            </div>
          {% else %}
            <div style="padding: 40px; border: 2px dashed #d1d5db; text-align: center; color: #6b7280; background-color: #ffffff; border-radius: 8px;">
              <div style="font-size: 24px; margin-bottom: 10px;">üìÑ</div>
              <div style="font-weight: 600;">PDF Beleg</div>
              <div style="font-size: 12px;">{{ item.field_receipt.entity.filename.value }}</div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
