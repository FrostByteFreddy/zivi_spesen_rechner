<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12 h-screen flex flex-col">
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Abrechnung ansehen: {{ node.label }}</h1>
      <a href="/dashboard" class="text-indigo-600 hover:text-indigo-900 text-sm flex items-center mt-1">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Zurück zum Dashboard
      </a>
    </div>
  </div>

  <div class="flex-1 flex flex-col md:flex-row gap-6 min-h-0">
    {# Left: PDF Preview #}
    <div class="w-full md:w-2/3 bg-gray-100 rounded-lg border border-gray-200 shadow-inner flex flex-col">
      <iframe src="{{ pdf_url }}" class="w-full h-full rounded-lg" title="PDF Vorschau"></iframe>
    </div>

    {# Right: Info / Comment #}
    <div class="w-full md:w-1/3 bg-white rounded-lg border border-gray-200 shadow-sm p-6 overflow-y-auto">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Details</h2>
      
      <div class="space-y-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Status</h3>
          <div class="mt-1">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
              Genehmigt
            </span>
          </div>
        </div>

        {% if node.field_editor_comment.value %}
          <div>
            <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider">Rückmeldung vom Editor</h3>
            <div class="mt-2 p-4 bg-gray-50 rounded-lg border border-gray-100 text-sm text-gray-700 italic">
              "{{ node.field_editor_comment.value }}"
            </div>
          </div>
        {% endif %}

        <div class="pt-6 border-t border-gray-100">
          <a href="{{ url('entity_print.view', {'export_type': 'pdf', 'entity_type': 'node', 'entity_id': node.id()}) }}" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a2 2 0 002 2h12a2 2 0 002-2v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            PDF herunterladen
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
