<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 md:mb-10 gap-6">
    <div>
      <h1 class="text-3xl md:text-4xl font-extrabold text-gray-900 tracking-tight">Editor Dashboard</h1>
      <p class="mt-2 text-base md:text-lg text-gray-600">Verwalte die Spesenabrechnungen der Zivis.</p>
    </div>
    <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
      <a href="{{ create_zivi_url }}" class="inline-flex justify-center items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200">
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
        </svg>
        Zivi erstellen
      </a>
      <a href="/dashboard/profile" class="inline-flex justify-center items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-xl text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200">
        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        Profil bearbeiten
      </a>
    </div>
  </div>

  <div class="space-y-4">
    {% for zivi_id, zivi_data in items %}
      <details class="group bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <summary class="flex items-center justify-between px-6 py-4 cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
          <div class="flex items-center gap-3">
            <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-600 font-bold text-lg">
              {{ zivi_data.name|first|upper }}
            </div>
            <div>
              <div class="flex items-center gap-2">
                <h3 class="text-lg font-medium text-gray-900">{{ zivi_data.name }}</h3>
                <a href="{{ zivi_data.edit_url }}" class="text-indigo-600 hover:text-indigo-900 text-sm font-medium" title="Zivi bearbeiten">
                  <svg class="h-4 w-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                </a>
              </div>
              <div class="flex items-center gap-4 text-sm text-gray-500">
                <span>{{ zivi_data.reports|length }} Abrechnungen</span>
                {% if zivi_data.service_start and zivi_data.service_end %}
                  <span class="flex items-center gap-1">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {{ zivi_data.service_start|date('d.m.Y') }} - {{ zivi_data.service_end|date('d.m.Y') }}
                  </span>
                {% endif %}
              </div>
            </div>
          </div>
          <svg class="w-6 h-6 text-gray-400 transform group-open:rotate-180 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        
        <div class="px-6 py-4 border-t border-gray-200">
          {% if zivi_data.reports|length > 0 %}
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Titel</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Zeitraum</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Betrag</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Aktionen</th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {% for item in zivi_data.reports %}
                    <tr>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ item.title }}
                        {% if item.editor_comment %}
                          <div class="mt-2 p-2 bg-indigo-50 rounded-md border border-indigo-100 text-xs text-indigo-700">
                            <div class="flex items-start gap-1">
                              <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path></svg>
                              <span class="whitespace-normal">{{ item.editor_comment }}</span>
                            </div>
                          </div>
                        {% endif %}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ item.date_range }}</td>
                      <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                          {% if item.status == 'approved' %}
                            bg-green-100 text-green-800
                          {% elseif item.status == 'submitted' %}
                            bg-yellow-100 text-yellow-800
                          {% elseif item.status == 'change_requested' %}
                            bg-red-100 text-red-800
                          {% else %}
                            bg-gray-100 text-gray-800
                          {% endif %}">
                          {% if item.status == 'approved' %}
                            Genehmigt
                          {% elseif item.status == 'submitted' %}
                            Eingereicht
                          {% elseif item.status == 'change_requested' %}
                            Änderung angefordert
                          {% elseif item.status == 'draft' %}
                            Entwurf
                          {% else %}
                            {{ item.status }}
                          {% endif %}
                        </span>
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">CHF {{ item.total }}</td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium flex gap-2">
                        {% if item.actions.edit %}
                          <a href="{{ item.actions.edit.url }}" class="text-indigo-600 hover:text-indigo-900" title="Prüfen">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                            </svg>
                          </a>
                        {% else %}
                          <a href="{{ item.actions.view.url }}" class="text-gray-400 hover:text-gray-600" title="Ansehen">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                            </svg>
                          </a>
                        {% endif %}
                        {% if item.actions.pdf %}
                          <a href="{{ item.actions.pdf.url }}" class="text-gray-400 hover:text-gray-600" target="_blank" title="PDF herunterladen">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                          </a>
                        {% endif %}
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <div class="py-4 text-center text-gray-500 italic">
              Noch keine Abrechnungen eingereicht.
            </div>
          {% endif %}
        </div>
      </details>
    {% else %}
      <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-8 text-center">
        <p class="text-gray-500 text-lg">Keine Zivis oder Abrechnungen gefunden.</p>
      </div>
    {% endfor %}
  </div>
</div>
