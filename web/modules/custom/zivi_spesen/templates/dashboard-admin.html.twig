<div class="dashboard-container">
  <h1>Admin Dashboard</h1>
  <p>Overview of all Zivi Expense Reports.</p>

  <table class="dashboard-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Date Range</th>
        <th>Status</th>
        <th>Total Amount</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.id }}</td>
          <td>{{ item.title }}</td>
          <td>{{ item.date_range }}</td>
          <td><span class="status-badge status-{{ item.status|lower }}">{{ item.status }}</span></td>
          <td>CHF {{ item.total }}</td>
          <td>
            {% if item.actions.edit %}
              <a href="{{ item.actions.edit.url }}" class="button button--small button--primary">Edit</a>
            {% else %}
              <a href="{{ item.actions.view.url }}" class="button button--small">View</a>
            {% endif %}
            {% if item.actions.pdf %}
              <a href="{{ item.actions.pdf.url }}" class="button button--small button--icon" target="_blank" title="Download PDF">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
              </a>
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="6">No reports found.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
